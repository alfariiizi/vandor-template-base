# Application Configuration
# This file shows all available configuration options with examples and defaults.
# Copy this to config.yaml and customize for your environment.

# Application Settings
app:
  # Application name used for logging and metrics
  # Validation: required, min=1
  # Example: my-awesome-app
  name: {{.ProjectName}}

  # Application version in semantic versioning format
  # Validation: required, semver
  # Example: 1.2.3
  # Default: 0.1.0
  version: 0.1.0

  # Environment mode: development, staging, or production
  # Validation: required, oneof=development staging production
  # Example: production
  # Default: development
  env: development

# Logger Settings
logger:
  # Log level: debug, info, warn, error
  # Validation: required, oneof=debug info warn error
  # Example: debug
  # Default: info
  level: info

  # Log output format: json (for production) or console (for development)
  # Validation: required, oneof=json console
  # Example: json
  # Default: console
  format: console

