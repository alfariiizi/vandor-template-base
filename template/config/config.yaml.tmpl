# Application Configuration
# This file shows all available configuration options with examples and defaults.
# Copy this to config.yaml and customize for your environment.

# Application Settings
app:
  # Application name used for logging and metrics
  # Validation: required, min=1
  # Example: my-awesome-app
  name: {{.ProjectName}}

  # Application version in semantic versioning format
  # Validation: required, semver
  # Example: 1.2.3
  # Default: 0.1.0
  version: 0.1.0

  # Environment mode: development, staging, or production
  # Validation: required, oneof=development staging production
  # Example: production
  # Default: development
  env: development

# Logger Settings
logger:
  # Log level: debug, info, warn, error
  # Validation: required, oneof=debug info warn error
  # Example: debug
  # Default: info
  level: info

  # Log output format: json (for production) or console (for development)
  # Validation: required, oneof=json console
  # Example: json
  # Default: console
  format: console

# ============================================================================
# VPKG Package Configurations
# ============================================================================
# Packages add their configuration sections below.
# Uncomment and configure after installing each package.

# HTTP Server (vandor/http)
# Uncomment after: vandor vpkg add vandor/http
# http:
#   # Server bind address - use 0.0.0.0 for all interfaces, 127.0.0.1 for localhost only
#   # Validation: hostname|ip
#   # Example: api.example.com
#   # Default: 0.0.0.0
#   host: 0.0.0.0
#
#   # Server port number (1-65535)
#   # Validation: min=1, max=65535
#   # Example: 443
#   # Default: 8080
#   port: 8080
#
#   # Maximum duration in seconds for reading the entire request, including the body
#   # Validation: min=1
#   # Example: 60
#   # Default: 30
#   read_timeout: 30
#
#   # Maximum duration in seconds for writing the response
#   # Validation: min=1
#   # Example: 60
#   # Default: 30
#   write_timeout: 30
#
#   # Maximum duration in seconds to wait for graceful shutdown
#   # Validation: min=1
#   # Example: 30
#   # Default: 10
#   shutdown_timeout: 10

# MinIO Object Storage (vandor/minio)
# Uncomment after: vandor vpkg add vandor/minio
# minio:
#   # MinIO server endpoint in hostname:port format
#   # Validation: hostname_port
#   # Example: minio.example.com:9000
#   # Default: localhost:9000
#   endpoint: localhost:9000
#
#   # MinIO access key ID (minimum 3 characters)
#   # Validation: min=3
#   # Example: AKIAIOSFODNN7EXAMPLE
#   # Default: minioadmin
#   access_key_id: minioadmin
#
#   # MinIO secret access key (minimum 8 characters)
#   # Validation: min=8
#   # Example: wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY
#   # Default: minioadmin
#   secret_access_key: minioadmin
#
#   # Enable SSL/TLS for MinIO connection (use true for production)
#   # Example: true
#   # Default: false
#   use_ssl: false
#
#   # Default bucket name for file operations (3-63 characters, DNS-compliant)
#   # Validation: min=3, max=63
#   # Example: my-app-uploads
#   # Default: default
#   bucket_name: default
#
#   # AWS region for bucket location (affects bucket creation)
#   # Example: ap-southeast-1
#   # Default: us-east-1
#   region: us-east-1
