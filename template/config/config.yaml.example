# Application Configuration

app:
  name: {{.ProjectName}}
  version: 0.1.0
  env: development  # development, staging, production

logger:
  level: info       # debug, info, warn, error
  format: console   # json, console

# VPKG components will add their configuration here
# For example, after installing transport/http:
# http:
#   host: 0.0.0.0
#   port: 8080
#   timeout: 30s

# After installing storage/postgres:
# postgres:
#   host: localhost
#   port: 5432
#   database: {{.ProjectName}}
#   username: postgres
#   password: postgres
#   ssl_mode: disable
