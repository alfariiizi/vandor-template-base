version: '3.8'

services:
  # Application service (default entry point)
  app:
    build:
      context: .
      dockerfile: cmd/app/Dockerfile
    container_name: {{.ProjectName}}-app
    ports:
      - "8080:8080"
    volumes:
      - ./config:/root/config:ro
    environment:
      - APP_ENV=development
      - APP_LOGGER_LEVEL=debug
    # Uncomment if you need database
    # depends_on:
    #   - postgres
    restart: unless-stopped
    networks:
      - {{.ProjectName}}-network

